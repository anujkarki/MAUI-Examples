<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="UraniumUIDemoApp.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:material="http://schemas.enisn-projects.io/dotnet/maui/uraniumui/material">

    <ScrollView>
        <VerticalStackLayout Padding="30,0" Spacing="25">
            <Image
                Aspect="AspectFit"
                HeightRequest="185"
                SemanticProperties.Description="dot net bot in a race car number eight"
                Source="dotnet_bot.png" />

            <material:DatePickerField x:Name="txtDate" Title="Pick a Date" />
            <material:TimePickerField x:Name="txtTime" Title="Pick a Time" />

            <Label x:Name="lblCounter" Text="Welcome to &#10;.NET Multi-platform App UI" />

            <Button
                x:Name="CounterBtn"
                Clicked="OnCounterClicked"
                HorizontalOptions="Fill"
                Text="Set Date Time in Label" />
            <!--<Button
                x:Name="btnGetCurrentDate"
                Clicked="btnGetCurrentDate_Clicked"
                HorizontalOptions="Fill"
                Text="Set Current Date Time in Field" />-->
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
